# Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# LiveKit Configuration
LIVEKIT_URL=your_livekit_url
LIVEKIT_API_KEY=your_api_key
LIVEKIT_API_SECRET=your_api_secret

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Deepgram Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key

# Cartesia Configuration
CARTESIA_API_KEY=your_cartesia_api_key

# Optional: Additional TTS Providers
# ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Optional: Additional STT Providers
# AZURE_SPEECH_KEY=your_azure_speech_key
# AZURE_SPEECH_REGION=your_azure_speech_region

# Optional: Additional LLM Providers
# ANTHROPIC_API_KEY=your_anthropic_api_key
# GOOGLE_API_KEY=your_google_api_key

# Google Cloud Translation Configuration
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
# GOOGLE_CLOUD_PROJECT=your_project_id

# Translation Agent Configuration (ot-translator)
# TRANSLATION_SOURCE_LANGUAGE=en  # Default source language
# TRANSLATION_TARGET_LANGUAGE=zh  # Default target language
# TRANSLATION_DEBOUNCE_MS=500  # Debounce delay in milliseconds for interim translations
# TRANSLATION_DEBOUNCE_ENABLED=true  # Enable debouncing for interim translations
# TRANSLATION_BATCH_SIZE=3  # Batch size for final translations
# TRANSLATION_BATCH_TIMEOUT_MS=2000  # Batch timeout in milliseconds
# TRANSLATION_SYNC_DISPLAY_MODE=false  # false: show original first, then translation (faster); true: show both together (sync)


